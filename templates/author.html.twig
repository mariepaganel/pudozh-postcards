{% extends 'base.html.twig' %}

{% block main %}
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-2">
                    {% if author.photo %}
                        <img src="{{ author.photo }}" class="img-fluid rounded">
                    {% else %}
                        <img src="https://s3.amazonaws.com/media.reading.am/users/avatars/default/original.png" class="img-fluid rounded">
                    {% endif %}
                </div>
                <div class="col-md-9">
                    <h2>{{ author.name }}</h2>
                    {% if author.email %}
                        <p><a href="mailto:{{ author.email }}">Связаться с автором</a></p>
                    {% endif %}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 my-3">
                    <p>{{ author.description|raw }}</p>
                </div>
            </div>
            <div class="row">

                {% include '_album.html.twig' %}

                {% if images.haveToPaginate %}
                    <div class="navigation mx-auto text-center">
                        {{ pagerfanta(images, 'twitter_bootstrap4_translated', {routeParams: {'author': author.id}, routeName:'author_by_id_paginated'}) }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

